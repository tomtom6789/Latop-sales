
<%= display_header(@review) %>
<%= render partial: 'layouts/errors', locals: {object: @review} %>


<%= form_for(@review) do |f| %>
    <% if params[:laptop_id] %>
        <%= f.hidden_field :laptop_id%>
    <%else%>
      <div>
        <%= f.label :laptop_id, "Select an Laptop" %>
        <%= f.collection_select :laptop_id, Laptop.all, :id, :color_and_brand, include_blank: true %>
      </div>
    <%end%>
<br><br>

<%= f.label :title  %>
<%= f.text_field :title  %>
<br><br>

<%= f.label :stars %>
<%= f.number_field :stars, min: 0, max: 5 %>
<br><br>

<%= f.label :content %>
<%= f.text_area :content %>
<br><br>



<%= f.submit  %>
<%end%>