
<%= render partial: 'layouts/errors', locals: {object: @review} %>

<%= form_for([@review]) do |f| %>

<%= f.label :title  %>
<%= f.text_field :title  %>
<br><br>

<%= f.label :stars %>
<%= f.number_field :stars, min: 0, max: 5 %>
<br><br>

<%= f.label :content %>
<%= f.text_area :content %>
<br><br>


<%= f.hidden_field :laptop_id %>
<br><br>

<%= f.submit %>
<%end%>